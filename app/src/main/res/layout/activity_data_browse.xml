<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.weisi.tool.wsnbox.activity.DataBrowseActivity">

    <RadioGroup
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/rg_view_mode"
        android:orientation="horizontal"
        android:background="@color/bg_config"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.cjq.tool.qbox.ui.view.CustomDrawableSizeRadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/rdo_physical_sensor_mode"
            android:text="@string/physical_sensor_mode"
            android:textSize="@dimen/size_text_activity"
            android:textColor="@drawable/selector_tc_data_browse_view_label"
            android:drawableTop="@drawable/selector_physical_sensor_mode"
            android:button="@null"
            android:textAlignment="center"
            android:background="@null"
            app:drawableTop_width="@dimen/size_image_middle"
            app:drawableTop_height="@dimen/size_image_middle"/>
        <com.cjq.tool.qbox.ui.view.CustomDrawableSizeRadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/rdo_logical_sensor_mode"
            android:text="@string/logical_sensor_mode"
            android:textSize="@dimen/size_text_activity"
            android:textColor="@drawable/selector_tc_data_browse_view_label"
            android:drawableTop="@drawable/selector_logical_sensor_mode"
            android:button="@null"
            android:textAlignment="center"
            android:background="@null"
            app:drawableTop_width="@dimen/size_image_middle"
            app:drawableTop_height="@dimen/size_image_middle"/>
        <com.cjq.tool.qbox.ui.view.CustomDrawableSizeRadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/rdo_device_node_mode"
            android:text="@string/device_node_mode"
            android:textSize="@dimen/size_text_activity"
            android:textColor="@drawable/selector_tc_data_browse_view_label"
            android:drawableTop="@drawable/selector_device_node_mode"
            android:button="@null"
            android:textAlignment="center"
            android:background="@null"
            app:drawableTop_width="@dimen/size_image_middle"
            app:drawableTop_height="@dimen/size_image_middle"/>
    </RadioGroup>
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/fl_view_carrier"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rg_view_mode"></FrameLayout>

</android.support.constraint.ConstraintLayout>
