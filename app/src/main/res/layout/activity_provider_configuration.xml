<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bg_config"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.weisi.tool.wsnbox.activity.ProviderConfigurationActivity">

    <RadioGroup
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/rg_config_mode"
        android:orientation="horizontal"
        android:padding="@dimen/padding_small"
        android:background="@color/bg_actionbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.cjq.tool.qbox.ui.view.CustomDrawableSizeRadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/rdo_sensors"
            android:text="@string/physical_sensor_mode"
            android:textSize="@dimen/size_text_activity"
            android:textColor="@drawable/selector_tc_data_browse_view_label"
            android:drawableLeft="@drawable/selector_physical_sensor_mode"
            app:drawableLeft_width="@dimen/size_image_middle"
            app:drawableLeft_height="@dimen/size_image_middle"
            android:button="@null"
            android:background="@null"/>
        <com.cjq.tool.qbox.ui.view.CustomDrawableSizeRadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/rdo_devices"
            android:text="@string/device_node_mode"
            android:textSize="@dimen/size_text_activity"
            android:textColor="@drawable/selector_tc_data_browse_view_label"
            android:drawableLeft="@drawable/selector_device_node_mode"
            app:drawableLeft_width="@dimen/size_image_middle"
            app:drawableLeft_height="@dimen/size_image_middle"
            android:button="@null"
            android:background="@null"/>
    </RadioGroup>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gl_provider_config_middle_vertical"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="@dimen/size_image_middle"
        android:id="@+id/btn_add"
        android:src="@drawable/ic_add_white"
        android:scaleType="fitCenter"
        android:background="@color/bg_add"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/gl_provider_config_middle_vertical"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="@dimen/size_image_middle"
        android:id="@+id/btn_delete"
        android:src="@drawable/ic_delete_white"
        android:scaleType="fitCenter"
        android:background="@color/bg_delete"
        app:layout_constraintLeft_toRightOf="@id/gl_provider_config_middle_vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/fl_view_carrier"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rg_config_mode"
        app:layout_constraintBottom_toTopOf="@id/btn_add"/>

</android.support.constraint.ConstraintLayout>
