<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_small"
    app:contentPadding="@dimen/padding_small">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/shape_divider_about_activity"
        android:showDividers="middle"
        android:background="@color/bg_divider_about_activity">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_small"
            android:background="@android:color/white"
            android:layout_marginTop="@dimen/divider_width_fix"
            android:layout_marginStart="@dimen/divider_width_fix"
            android:layout_marginBottom="@dimen/divider_width_fix"
            android:textSize="@dimen/size_text_activity"
            android:text="@string/device_name"
            android:gravity="center"/>

        <com.cjq.tool.qbox.ui.view.CustomDrawableSizeTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/tv_device_name"
            android:padding="@dimen/padding_small"
            android:layout_marginTop="@dimen/divider_width_fix"
            android:layout_marginEnd="@dimen/divider_width_fix"
            android:layout_marginBottom="@dimen/divider_width_fix"
            android:textSize="@dimen/size_text_activity"
            android:gravity="center"
            android:background="@android:color/white"
            android:drawableRight="@drawable/ic_modify"
            app:drawableRight_width="@dimen/size_image_small"
            app:drawableRight_height="@dimen/size_image_small"/>
    </LinearLayout>

</android.support.v7.widget.CardView>