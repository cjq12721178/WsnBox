<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_small"
    app:contentPadding="@dimen/padding_small">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cl_hull"
        android:background="@color/bg_divider_about_activity">

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gl_mid_ver"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_data_type_label"
            android:textSize="@dimen/size_text_activity"
            android:text="@string/data_type_value"
            android:padding="@dimen/padding_small"
            android:layout_marginTop="@dimen/divider_width_fix"
            android:layout_marginStart="@dimen/divider_width_fix"
            android:layout_marginBottom="@dimen/divider_width_fix"
            android:gravity="center"
            android:background="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/gl_mid_ver"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_measurement_id_value"
            android:textSize="@dimen/size_text_activity"
            android:padding="@dimen/padding_small"
            android:layout_margin="@dimen/divider_width_fix"
            android:gravity="center"
            android:background="@android:color/white"
            app:layout_constraintStart_toEndOf="@id/gl_mid_ver"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_default_name_label"
            android:textSize="@dimen/size_text_activity"
            android:text="@string/default_name"
            android:padding="@dimen/padding_small"
            android:layout_marginTop="@dimen/divider_width_fix"
            android:layout_marginStart="@dimen/divider_width_fix"
            android:layout_marginBottom="@dimen/divider_width_fix"
            android:gravity="center"
            android:background="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/gl_mid_ver"
            app:layout_constraintTop_toBottomOf="@id/tv_data_type_label"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_default_name_value"
            android:textSize="@dimen/size_text_activity"
            android:padding="@dimen/padding_small"
            android:layout_margin="@dimen/divider_width_fix"
            android:gravity="center"
            android:background="@android:color/white"
            app:layout_constraintStart_toEndOf="@id/gl_mid_ver"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_measurement_id_value"/>

        <com.cjq.tool.qbox.ui.view.CustomDrawableSizeTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_custom_name_value"
            android:textSize="@dimen/size_text_activity"
            android:padding="@dimen/padding_small"
            android:layout_margin="@dimen/divider_width_fix"
            android:gravity="center"
            android:background="@android:color/white"
            android:drawableRight="@drawable/ic_modify"
            app:drawableRight_width="@dimen/size_image_small"
            app:drawableRight_height="@dimen/size_image_small"
            app:layout_constraintStart_toEndOf="@id/gl_mid_ver"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_default_name_value"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_custom_name_label"
            android:textSize="@dimen/size_text_activity"
            android:text="@string/custom_name"
            android:padding="@dimen/padding_small"
            android:layout_marginTop="@dimen/divider_width_fix"
            android:layout_marginStart="@dimen/divider_width_fix"
            android:gravity="center"
            android:background="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/gl_mid_ver"
            app:layout_constraintTop_toBottomOf="@id/tv_default_name_label"
            app:layout_constraintBottom_toBottomOf="@id/tv_custom_name_value"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_warner_settings"
            android:textSize="@dimen/size_text_activity"
            android:text="@string/warner_settings"
            android:padding="@dimen/padding_small"
            android:layout_margin="@dimen/divider_width_fix"
            android:gravity="center"
            android:background="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_custom_name_value"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.cjq.tool.qbox.ui.view.CustomDrawableSizeTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_warner_type_value"
            android:textSize="@dimen/size_text_activity"
            android:padding="@dimen/padding_small"
            android:layout_margin="@dimen/divider_width_fix"
            android:gravity="center"
            android:background="@android:color/white"
            android:drawableRight="@drawable/ic_modify"
            app:drawableRight_width="@dimen/size_image_small"
            app:drawableRight_height="@dimen/size_image_small"
            app:layout_constraintStart_toEndOf="@id/gl_mid_ver"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_warner_settings"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_warner_type_label"
            android:textSize="@dimen/size_text_activity"
            android:text="@string/warner_type"
            android:padding="@dimen/padding_small"
            android:layout_marginTop="@dimen/divider_width_fix"
            android:layout_marginStart="@dimen/divider_width_fix"
            android:gravity="center"
            android:background="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/gl_mid_ver"
            app:layout_constraintTop_toBottomOf="@id/tv_warner_settings"
            app:layout_constraintBottom_toBottomOf="@id/tv_warner_type_value"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>