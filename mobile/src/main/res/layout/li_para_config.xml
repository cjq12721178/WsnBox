<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_small"
    app:contentPadding="@dimen/padding_small">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/size_image_middle"
            android:layout_height="@dimen/size_image_middle"
            android:id="@+id/iv_para_config_logo"
            android:scaleType="fitCenter"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:layout_width="@dimen/size_image_middle"
            android:layout_height="@dimen/size_image_middle"
            android:id="@+id/iv_remove"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_remove"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:layout_width="@dimen/size_image_middle"
            android:layout_height="@dimen/size_image_middle"
            android:id="@+id/iv_export"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_export"
            app:layout_constraintRight_toLeftOf="@id/iv_remove"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_config_provider_name"
            android:textSize="@dimen/size_text_activity"
            android:gravity="center"
            app:layout_constraintLeft_toRightOf="@id/iv_para_config_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iv_export"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>