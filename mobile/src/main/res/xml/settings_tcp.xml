<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference
        android:key="@string/preference_key_tcp_enable"
        android:title="@string/preference_title_tcp"
        android:switchTextOn="@string/enable"
        android:switchTextOff="@string/disable"/>
    <PreferenceCategory
        android:key="@string/preference_key_launch_parameter"
        android:title="@string/preference_title_launch_parameter">
        <EditTextPreference
            android:key="@string/preference_key_remote_server_ip"
            android:title="@string/preference_title_remote_server_ip"/>
        <EditTextPreference
            android:key="@string/preference_key_remote_server_port"
            android:title="@string/preference_title_remote_server_port"
            android:inputType="number"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/preference_title_use_parameter"
        android:key="@string/preference_key_use_parameter">
        <EditTextPreference
            android:key="@string/preference_key_tcp_data_request_cycle"
            android:title="@string/preference_title_data_request_cycle"
            android:inputType="number"/>
    </PreferenceCategory>
</PreferenceScreen>